<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ListItemImageStyle">
        <item name="android:layout_width">@dimen/list_item_image_size</item>
        <item name="android:layout_height">@dimen/list_item_image_size</item>
        <item name="android:layout_marginStart">@dimen/list_item_margin</item>
        <item name="android:layout_marginTop">@dimen/list_item_margin</item>
    </style>

    <style name="ListItemMetaImageStyle">
        <item name="android:layout_width">@dimen/list_item_meta_image_size</item>
        <item name="android:layout_height">@dimen/list_item_meta_image_size</item>
        <item name="android:layout_marginEnd">@dimen/list_item_meta_image_margin</item>
        <item name="android:layout_marginTop">@dimen/list_item_meta_image_margin</item>
    </style>

    <style name="TitleText" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EditTextLoginStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/xlarge_margin</item>
        <item name="android:layout_marginTop">@dimen/xlarge_margin</item>
        <item name="android:layout_marginEnd">@dimen/xlarge_margin</item>
        <item name="android:background">@drawable/form_edit_text_bg</item>
        <item name="android:ems">10</item>
        <item name="android:drawablePadding">@dimen/small_padding</item>
        <item name="android:minHeight">@dimen/form_ui_min_height</item>
        <item name="android:padding">@dimen/small_padding</item>
        <item name="android:textColorHint">@color/color_hint</item>
    </style>

    <!-- BUTTON & LINK STYLES -->

    <style name="TextLinkStyleOld">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/small_padding</item>
    </style>

    <style name="BaseButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_base_bg</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:padding">@dimen/small_padding</item>
    </style>

    <style name="GoogleButtonStyle" parent="FirebaseUI.Button.AccountChooser.GoogleButton">
        <item name="android:background">@drawable/button_left_bg</item>
        <item name="android:minHeight">@dimen/form_ui_min_height</item>
        <item name="android:padding">@dimen/small_padding</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:drawablePadding">@dimen/small_padding</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="FacebookButtonStyle" parent="FirebaseUI.Button.AccountChooser.FacebookButton">
        <item name="android:background">@drawable/button_right_bg</item>
        <item name="android:minHeight">@dimen/form_ui_min_height</item>
        <item name="android:padding">@dimen/small_padding</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:drawablePadding">@dimen/small_padding</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <!-- TextView styles -->
    <style name="TextView">
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextView.Title">
        <item name="android:textSize">@dimen/title_size_16</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.AlertText">
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:textColor">@color/color_error</item>
    </style>


    <!-- App EditText style -->

    <style name="AppEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:minHeight">@dimen/form_ui_min_height</item>
        <item name="android:padding">@dimen/small_padding</item>
    </style>

    <style name="AppEditTextNightStyle" parent="AppEditTextStyle">
        <item name="android:background">@drawable/edit_text_background_night</item>
    </style>

    <!-- App Button style -->

    <style name="AppButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_base_bg</item>
<!--        <item name="android:textColor">?attr/colorAccent</item>-->
        <item name="android:padding">@dimen/small_padding</item>
    </style>

    <style name="AppButtonNightStyle" parent="AppButtonStyle">
        <item name="android:background">@drawable/button_base_bg_night</item>
    </style>

    <!-- App TextView style -->

    <style name="TextLinkStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:padding">@dimen/small_padding</item>
    </style>

    <style name="InlineErrorMessageStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

</resources>