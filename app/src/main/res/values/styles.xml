    <!-- App EditText style -->

    <style name="AppEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:minHeight">@dimen/form_ui_min_height</item>
        <item name="android:padding">@dimen/small_padding</item>
    </style>

    <style name="AppEditTextStyleNight" parent="AppEditTextStyle">
        <item name="android:background">@drawable/edit_text_background_night</item>
    </style>

    <!-- App Button style -->

    <style name="AppButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_base_bg</item>
<!--        <item name="android:textColor">?attr/colorAccent</item>-->
        <item name="android:padding">@dimen/small_padding</item>
    </style>

    <style name="AppButtonNightStyle" parent="AppButtonStyle">
        <item name="android:background">@drawable/button_base_bg_night</item>
    </style>

    <!-- App TextView style -->

    <style name="TextLinkStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:padding">@dimen/small_padding</item>
    </style>

    <style name="ValidationMessageStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/color_alert</item>
        <item name="android:padding">@dimen/small_padding</item>
    </style>

    <style name="InlineErrorMessageStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <!-- Cards Style -->
    <style name="CardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="android:fontFamily">@font/rubik_medium</item>
    </style>

    <style name="CardStyle.Title" parent="CardStyle">
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CardStyle.Body" parent="CardStyle">
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <!-- Floating Action Button Style -->
    <style name="appActionOverFlowStyle" parent="@style/Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="tint">@android:color/white</item>
    </style>

    <!-- App Bar -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>