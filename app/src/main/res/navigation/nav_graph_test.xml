<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_test"
    app:startDestination="@id/placeholder">

    <fragment
        android:id="@+id/placeholder"
        android:label=""
        android:name="com.ahmedmatem.android.matura.ui.test.TestPlaceholderFragment"
        tools:layout="@layout/fragment_test_placeholder">
        <action
            android:id="@+id/action_placeholder_to_testViewFragment"
            app:destination="@id/testViewFragment" />
        <action
            android:id="@+id/action_placeholder_to_testResultFragment"
            app:destination="@id/testResultFragment" />
        <argument
            android:name="test"
            android:defaultValue="@null"
            app:argType="com.ahmedmatem.android.matura.network.models.Test"
            app:nullable="true" />
    </fragment>

    <fragment
        android:id="@+id/testViewFragment"
        android:name="com.ahmedmatem.android.matura.ui.test.TestViewFragment"
        android:label="@string/title_test"
        tools:layout="@layout/fragment_test_view">
        <action
            android:id="@+id/action_testViewFragment_to_testResultFragment"
            app:destination="@id/testResultFragment"
            app:popUpTo="@id/testViewFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="test"
            app:argType="com.ahmedmatem.android.matura.network.models.Test"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>

    <fragment
        android:id="@+id/testResultFragment"
        android:name="com.ahmedmatem.android.matura.ui.test.TestResultFragment"
        android:label="@string/test_result_title"
        tools:layout="@layout/fragment_test_result">
        <argument
            android:name="url"
            app:argType="string" />
    </fragment>
</navigation>