<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/auth_navigation"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.ahmedmatem.android.matura.ui.auth.login.LoginFragment"
        android:label="@string/title_login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_registrationFragment"
            app:destination="@id/registrationFragment" />
        <action
            android:id="@+id/action_loginFragment_to_googleLoginFragment"
            app:destination="@id/googleLoginFragment" />
        <action
            android:id="@+id/action_loginFragment_to_noConnectionFragment"
            app:destination="@id/noConnectionFragment" />
    </fragment>

    <fragment
        android:id="@+id/registrationFragment"
        android:name="com.ahmedmatem.android.matura.ui.auth.registration.RegistrationFragment"
        android:label="@string/title_registration"
        tools:layout="@layout/fragment_registration">
        <action
            android:id="@+id/action_registrationFragment_to_noConnectionFragment"
            app:destination="@id/noConnectionFragment" />
    </fragment>

    <fragment
        android:id="@+id/googleLoginFragment"
        android:name="com.ahmedmatem.android.matura.ui.auth.login.external.GoogleLoginFragment"
        android:label=""
        tools:layout="@layout/fragment_external_login"/>

    <fragment
        android:id="@+id/noConnectionFragment"
        android:name="com.ahmedmatem.android.matura.ui.general.NoConnectionFragment"
        android:label=""
        tools:layout="@layout/fragment_no_connection"/>

</navigation>