<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.ahmedmatem.android.matura.infrastructure.ExtensionsKt" />
        <variable
            name="test"
            type="com.ahmedmatem.android.matura.network.models.Test" />

        <variable
            name="clickListener"
            type="com.ahmedmatem.android.matura.ui.test.adapter.TestClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:onClick="@{() -> clickListener.onClick(test)}">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="32dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="52dp" />

        <ImageView
            android:id="@+id/test_emoticon"
            style="@style/ListItemImageStyle"
            android:contentDescription="@string/test_image_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:emoIcon="@{Integer.parseInt(test.resultInPercent)}"
            tools:src="@drawable/ic_face_4_24"/>

        <TextView
            android:id="@+id/test_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/list_item_margin"
            tools:text="07/05/21 (11:25)"
            android:text="@{test.title}"
            app:layout_constraintBottom_toTopOf="@+id/guideline1"
            app:layout_constraintStart_toEndOf="@+id/test_emoticon" />

        <TextView
            android:id="@+id/test_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/list_item_margin"
            tools:text="16/20, 80% | незавършен"
            android:text="@{test.subtitle}"
            app:layout_constraintBottom_toTopOf="@+id/guideline2"
            app:layout_constraintStart_toEndOf="@+id/test_emoticon" />

        <ImageView
            android:id="@+id/test_meta"
            style="@style/ListItemMetaImageStyle"
            android:contentDescription="@string/test_meta_description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_elapsed_time_black_24" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>